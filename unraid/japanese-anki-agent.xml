<?xml version="1.0"?>
<Container version="2">
  <Name>japanese-anki-agent</Name>
  <Repository>ghcr.io/philippebaert/japanese-anki-agent:latest</Repository>
  <Registry>https://ghcr.io/v2/philippebaert/japanese-anki-agent/</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/PhilippeBaert/japanese-anki-agent/issues</Support>
  <Project>https://github.com/PhilippeBaert/japanese-anki-agent</Project>
  <Overview>
    AI-powered web application for generating Japanese vocabulary and sentence flashcards for Anki.
    Uses Claude AI to intelligently generate comprehensive flashcard data from minimal input.
  </Overview>
  <Category>Productivity: Tools:</Category>
  <WebUI>http://[IP]:[PORT:3000]/</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/PhilippeBaert/japanese-anki-agent/master/unraid/japanese-anki-agent.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/PhilippeBaert/japanese-anki-agent/master/unraid/icon.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled></DateInstalled>
  <DonateText/>
  <DonateLink/>
  <Requires>Claude Code OAuth Token or Anthropic API Key</Requires>
  <Config Name="WebUI Port" Target="3000" Default="3000" Mode="tcp" Description="Web interface port" Type="Port" Display="always" Required="true" Mask="false">3000</Config>
  <Config Name="Config Path" Target="/app/config" Default="/mnt/user/appdata/anki-agent/config" Mode="rw" Description="Configuration files location" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/anki-agent/config</Config>
  <Config Name="Logs Path" Target="/var/log/supervisor" Default="/mnt/user/appdata/anki-agent/logs" Mode="rw" Description="Log files location (optional)" Type="Path" Display="advanced" Required="false" Mask="false">/mnt/user/appdata/anki-agent/logs</Config>
  <Config Name="Claude OAuth Token" Target="CLAUDE_CODE_OAUTH_TOKEN" Default="" Mode="" Description="Your Claude Code OAuth Token (preferred, use this OR API Key)" Type="Variable" Display="always" Required="false" Mask="true"/>
  <Config Name="Anthropic API Key" Target="ANTHROPIC_API_KEY" Default="" Mode="" Description="Alternative: Your Anthropic API Key (use this OR OAuth Token)" Type="Variable" Display="always" Required="false" Mask="true"/>
  <Config Name="Debug Mode" Target="DEBUG" Default="false" Mode="" Description="Enable debug logging (true/false)" Type="Variable" Display="advanced" Required="false" Mask="false">false</Config>
  <Config Name="API Key (Optional)" Target="API_KEY" Default="" Mode="" Description="Optional API key to protect the backend endpoints" Type="Variable" Display="advanced" Required="false" Mask="true"/>
</Container>
